{
  "version": "1.0.0-*",
  "buildOptions": {
    "emitEntryPoint": true
  },

  "dependencies": {
    "NSubstitute": {
      "target": "project"
    },
    "NUnit": "3.4.0",
    "dotnet-test-nunit": "3.4.0-beta-1",

    // TODO Remove when fixed in Castle
    "System.Diagnostics.TraceSource": "4.0.0"
  },

  "testRunner": "nunit",

  "frameworks": {
    "netcoreapp1.0": {
      "compilationOptions": {
        "define": [ "DNXCORE50" ]
